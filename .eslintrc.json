{
  "env": { "browser": true, "node": true, "es6": true },
  "extends": ["eslint:recommended", "plugin:react/recommended", "plugin:@next/next/recommended"],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": ["react-hooks"],
  "rules": {
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "warn"
  }
}
